<Window x:Class="Ejercicio5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <WrapPanel Width="300" Height="45">
            <Button Width="100" Height="45" Click="Click_Event">Click Event</Button>
            <Button Width="100" Height="45" MouseEnter="Mouse_Enter">Mouse Enter</Button>
            <Button Width="100" Height="45" MouseRightButtonDown="Left_Click_Event">Left Click Event</Button>
        </WrapPanel>
    </Grid>
</Window>
